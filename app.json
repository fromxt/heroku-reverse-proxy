{
	"name": "Reverse Proxy",
	"description": "Simple reverse proxy for Heroku",
	"keywords": [
		"reverse proxy",
		"nginx"
	],
	"repository": "https://github.com/fromxt/heroku-reverse-proxy",
	"buildpacks": [
		{
			"url": "https://github.com/heroku/heroku-buildpack-nginx"
		}
	],
	"env": {
		"UPSTREAM_SERVER": {
			"description": "URL of upstream server to which all requests should be proxied"
		}
		"BASIC_AUTH_USERNAME": {
			"description": "Set auth_username "
		}
		"BASIC_AUTH_PASSWORD": {
			"description": "set auth_password"
		}
	},
	"stack": "heroku-18"
}
